<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="schema">
		<fieldset
			name="schema"
			label="PLG_SYSTEM_SCHEMA_FIELD_SCHEMA_LABEL"
		>
			<field
				name="JobPosting"
				type="subform"
				showon="schemaType:JobPosting"
			>
				<form>

					<field
						name="@type"
						type="hidden"
						default="JobPosting"
					/>

					<field
						name="title"
						type="text"
						filter="string"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_TITLE_LABEL"
					/>

					<field
						name="description"
						type="text"
						filter="string"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_DESCRIPTION_LABEL"
					/>

					<field
						name="identifier"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_IDENTIFIER_LABEL"
						type="subform"
					>
						<form>

							<field
								name="@type"
								type="hidden"
								default="PropertyValue"
							/>

							<field
								name="name"
								type="text"
								filter="string"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_NAME_LABEL"
							/>

							<field
								name="value"
								type="text"
								filter="string"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_VALUE_LABEL"
							/>

						</form>
					</field>

					<field
						name="datePosted"
						type="calendar"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_DATEPOSTED_LABEL"
						class="input-small"
						filter="user_utc"
						showtime="false"
						todaybutton="true"
						format="%Y-%m-%d"
					/>

					<field
						name="validThrough"
						type="calendar"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_VALIDTHROUGH_LABEL"
						class="input-small"
						filter="user_utc"
						showtime="true"
						todaybutton="true"
						format="%Y-%m-%dT%H:%i"
					/>

					<field
						name="employmentType"
						type="text"
						filter="string"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_EMPLOYMENTTYPE_LABEL"
					/>

					<field
						name="hiringOrganization"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_HIRINGORGANIZATION_LABEL"
						type="subform"
					>
						<form>

							<field
								name="@type"
								type="hidden"
								default="Organization"
							/>

							<field
								name="name"
								type="text"
								filter="string"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_NAME_LABEL"
							/>

							<field
								name="sameAs"
								type="text"
								filter="string"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_SAMEAS_LABEL"
							/>

							<field
								name="image"
								type="media"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_IMAGE_LABEL"
							/>

						</form>
					</field>

					<field
						name="jobLocation"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_JOBLOCATION_LABEL"
						type="subform"
					>
						<form>

							<field
								name="@type"
								type="hidden"
								default="Place"
							/>

							<field
								name="address"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_ADDRESS_LABEL"
								type="subform"
							>
								<form>

									<field
										name="@type"
										type="hidden"
										default="PostalAddress"
									/>

									<field
										name="streetAddress"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_STREETADDRESS_LABEL"
									/>

									<field
										name="addressLocality"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_ADDRESSLOCALITY_LABEL"
									/>

									<field
										name="addressRegion"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_ADDRESSREGION_LABEL"
									/>

									<field
										name="postalCode"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_POSTALCODE_LABEL"
									/>

									<field
										name="addressCountry"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_ADDRESSCOUNTRY_LABEL"
									/>
								</form>
							</field>
						</form>
					</field>
					<field
						name="baseSalary"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_BASESALARY_LABEL"
						type="subform"
					>
						<form>

							<field
								name="@type"
								type="hidden"
								default="MonetaryAmount"
							/>

							<field
								name="currency"
								type="text"
								filter="string"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_CURRENCY_LABEL"
							/>

							<field
								name="value"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_VALUE_LABEL"
								type="subform"
							>
								<form>

									<field
										name="@type"
										type="hidden"
										default="QuantitativeValue"
									/>

									<field
										name="value"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_VALUE_LABEL"
									/>

									<field
										name="unitText"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_UNITTEXT_LABEL"
									/>

								</form>
							</field>

						</form>
					</field>
				</form>
			</field>
		</fieldset>
	</fields>
</form>
