<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="schema">
		<fieldset
			name="schema"
			label="PLG_SYSTEM_SCHEMA_FIELD_SCHEMA_LABEL"
		>
			<field
				name="JobPosting"
				type="subform"
				showon="schemaType:JobPosting"
			>
				<form>

					<field
						name="@type"
						type="hidden"
						default="JobPosting"
					/>

					<field
						name="noteJobPost"
						type="note"
						description="PLG_SCHEMAORG_JOBPOSTING_DESCRIPTION_LABEL"
						class="alert alert-info w-100"
					/>

					<field
						name="title"
						type="text"
						filter="string"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_TITLE_LABEL"
					/>

					<field
						name="description"
						type="text"
						filter="string"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_DESCRIPTION_LABEL"
					/>

					<field
						name="identifier"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_IDENTIFIER_LABEL"
						type="subform"
					>
						<form>

							<field
								name="@type"
								type="hidden"
								default="PropertyValue"
							/>

							<field
								name="name"
								type="text"
								filter="string"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_NAME_LABEL"
							/>

							<field
								name="value"
								type="text"
								filter="string"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_VALUE_LABEL"
							/>
						</form>
					</field>
					<field
						name="datePosted"
						type="calendar"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_DATEPOSTED_LABEL"
						class="input-small"
						filter="user_utc"
						showtime="false"
						todaybutton="true"
						format="%Y-%m-%d"
					/>

					<field
						name="validThrough"
						type="calendar"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_VALIDTHROUGH_LABEL"
						class="input-small"
						filter="user_utc"
						showtime="true"
						todaybutton="true"
						format="%Y-%m-%dT%H:%i"
					/>

					<field
						name="jobLocationType"
						type="text"
						filter="string"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_JOBLOCATIONTYPE_LABEL"
					/>

					<field
						name="employmentType"
						type="text"
						filter="string"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_EMPLOYMENTTYPE_LABEL"
					/>

					<field
						name="jobStartDate"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_JOBSTARTDATE_LABEL"
						type="subform"
					>
						<form>

							<field
								name="@type"
								type="list"
								label="Type"
								default="text"
							>
								<option value="text">PLG_SCHEMAORG_JOBPOSTING_FIELD_TEXT_LABEL</option>
								<option value="date">PLG_SCHEMAORG_JOBPOSTING_FIELD_DATE_LABEL</option>
							</field>

							<field
								name="jobStartDate"
								type="calendar"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_JOBSTARTDATE_DATE_LABEL"
								class="input-small"
								filter="user_utc"
								showtime="false"
								todaybutton="true"
								format="%Y-%m-%d"
								showon="@type:date"
							/>

							<field
								name="text"
								type="text"
								filter="string"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_JOBSTARTDATE_TEXT_LABEL"
								default="ASAP"
								showon="@type:text"
							/>
						</form>
					</field>
					<field
						name="hiringOrganization"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_HIRINGORGANIZATION_LABEL"
						type="subform"
					>
						<form>

							<field
								name="@type"
								type="list"
								label="Type"
								default="organization"
							>
								<option value="person">PLG_SCHEMAORG_JOBPOSTING_FIELD_PERSON_LABEL</option>
								<option value="organization">PLG_SCHEMAORG_JOBPOSTING_FIELD_ORGANIZATION_LABEL</option>
							</field>

							<field
								name="name"
								type="text"
								filter="string"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_NAME_LABEL"
							/>

							<field
								name="url"
								type="url"
								filter="url"
								validate="url"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_URL_LABEL"
							/>

							<field
								name="logo"
								type="subform"
								label="logo"
								showon="@type:organization"
							>
								<form>

									<field
										name="@type"
										type="hidden"
										default="ImageObject"
									/>

									<field
										name="url"
										type="media"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_URL_LABEL"
									/>

								</form>
							</field>
							<field
								name="email"
								type="email"
								validate="email"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_EMAIL_LABEL"
							/>

							<field
								name="address"
								type="subform"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_ADDRESS_LABEL"
							>
								<form>

									<field
										name="@type"
										type="hidden"
										default="PostalAddress"
									/>

									<field
										name="addressLocality"
										type="text"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_LOCALITY_LABEL"
									/>

									<field
										name="postalCode"
										type="text"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_POSTAL_CODE_LABEL"
									/>

									<field
										name="streetAddress"
										type="text"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_STREET_ADDRESS_LABEL"
									/>

								</form>
							</field>
						</form>
					</field>

					<field
						name="jobLocation"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_JOBLOCATION_LABEL"
						type="subform"
					>
						<form>

							<field
								name="@type"
								type="hidden"
								default="Place"
							/>

							<field
								name="address"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_ADDRESS_LABEL"
								type="subform"
							>
								<form>

									<field
										name="@type"
										type="hidden"
										default="PostalAddress"
									/>

									<field
										name="streetAddress"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_STREET_ADDRESS_LABEL"
									/>

									<field
										name="addressLocality"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_LOCALITY_LABEL"
									/>

									<field
										name="addressRegion"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_ADDRESS_REGION_LABEL"
									/>

									<field
										name="postalCode"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_POSTAL_CODE_LABEL"
									/>

									<field
										name="addressCountry"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_ADDRESS_COUNTRY_LABEL"
									/>
								</form>
							</field>
						</form>
					</field>
					<field
						name="salaryCurrency"
						type="text"
						filter="string"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_SALARYCURRENCY_LABEL"
					/>

					<field
						name="baseSalary"
						label="PLG_SCHEMAORG_JOBPOSTING_FIELD_BASESALARY_LABEL"
						type="subform"
					>
						<form>

							<field
								name="@type"
								type="list"
								label="Type"
								default="MonetaryAmount"
							>
								<option value="MonetaryAmount">PLG_SCHEMAORG_JOBPOSTING_FIELD_MONETARYAMOUNT_LABEL</option>
								<option value="Number">PLG_SCHEMAORG_JOBPOSTING_FIELD_NUMBER_LABEL</option>
							</field>

							<field
								name="number"
								type="text"
								filter="string"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_VALUE_LABEL"
								showon="@type:Number"
							/>
							
							<field
								name="currency"
								type="text"
								filter="string"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_CURRENCY_LABEL"
								showon="@type:MonetaryAmount"
							/>

							<field
								name="QuantitativeValue"
								label="PLG_SCHEMAORG_JOBPOSTING_FIELD_QUANTITATIVEVALUE_LABEL"
								type="subform"
								showon="@type:MonetaryAmount"
							>
								<form>

									<field
										name="@type"
										type="hidden"
										default="QuantitativeValue"
									/>

									<field
										name="maxValue"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_MAXVALUE_LABEL"
									/>

									<field
										name="minValue"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_MINVALUE_LABEL"
									/>

									<field
										name="value"
										type="text"
										filter="string"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_VALUE_LABEL"
									/>

									<field
										name="unitText"
										type="list"
										label="PLG_SCHEMAORG_JOBPOSTING_FIELD_UNITTEXT_LABEL"
										default="MONTH"
									>
										<option value="HOUR">HOUR</option>
										<option value="DAY">DAY</option>
										<option value="WEEK">WEEK</option>
										<option value="MONTH">MONTH</option>
										<option value="YEAR">YEAR</option>
									</field>
								</form>
							</field>
						</form>
					</field>
				</form>
			</field>
		</fieldset>
	</fields>
</form>
